{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "out",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "composite": true,
    "noImplicitOverride": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "jest.config.ts"],
  "references": [
     { "path": "../cwi-base" },
     { "path": "../cwi-external-services"},
     { "path": "../chaintracks-base"},
     { "path": "../chaintracks-knex"},
     { "path": "../chaintracks-whatsonchain"},
     { "path": "../chaintracks-core"},
     { "path": "../chaintracks-spv"},
     { "path": "../dojo-base"},
     { "path": "../dojo-core"},
     { "path": "../dojo-knex"},
     { "path": "../dojo-watchman"}
  ]
}